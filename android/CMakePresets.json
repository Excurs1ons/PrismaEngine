{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "android-base",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "ANDROID_PLATFORM": "24",
        "ANDROID_STL": "c++_shared",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{ANDROID_NDK_HOME}",
        "rhs": ""
      }
    },
    {
      "name": "android-arm64",
      "inherits": "android-base",
      "displayName": "Android ARM64",
      "description": "Android build for ARM64 architecture (recommended)",
      "binaryDir": "${sourceDir}/../build-android/arm64-v8a",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a"
      }
    },
    {
      "name": "android-arm64-debug",
      "inherits": "android-base",
      "displayName": "Android ARM64 Debug",
      "description": "Android Debug build for ARM64 architecture",
      "binaryDir": "${sourceDir}/../build-android/arm64-v8a-debug",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "android-arm32",
      "inherits": "android-base",
      "displayName": "Android ARM32",
      "description": "Android build for ARM32 architecture (legacy devices)",
      "binaryDir": "${sourceDir}/../build-android/armeabi-v7a",
      "cacheVariables": {
        "ANDROID_ABI": "armeabi-v7a"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "android-arm64",
      "configurePreset": "android-arm64",
      "displayName": "Build Android ARM64"
    },
    {
      "name": "android-arm64-debug",
      "configurePreset": "android-arm64-debug",
      "displayName": "Build Android ARM64 Debug"
    },
    {
      "name": "android-arm32",
      "configurePreset": "android-arm32",
      "displayName": "Build Android ARM32"
    }
  ],
  "workflowPresets": [
    {
      "name": "android-all",
      "displayName": "Build All Android Architectures",
      "steps": [
        {
          "type": "configure",
          "name": "android-arm64"
        },
        {
          "type": "build",
          "name": "android-arm64"
        },
        {
          "type": "configure",
          "name": "android-arm32"
        },
        {
          "type": "build",
          "name": "android-arm32"
        }
      ]
    }
  ]
}