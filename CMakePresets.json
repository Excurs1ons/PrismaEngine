      "architecture": "ARM64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-arm64-release",
      "displayName": "Windows ARM64 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows ARM64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-arm64-release",
      "architecture": "ARM64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x86-debug",
      "displayName": "Windows x86 Debug",
