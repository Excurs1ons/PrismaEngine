{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "description": "Base configuration for all platforms"
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "description": "Base Windows configuration",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "description": "Debug build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-debug",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-release",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-arm64-debug",
      "displayName": "Windows ARM64 Debug",
