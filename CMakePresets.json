{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "description": "Base Windows configuration",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "description": "Debug build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-debug",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-release",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x86-debug",
      "displayName": "Windows x86 Debug",
      "inherits": "windows-base",
      "description": "Debug build for Windows x86 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x86-debug",
      "architecture": "Win32",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x86-release",
      "displayName": "Windows x86 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows x86 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x86-release",
      "architecture": "Win32",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}