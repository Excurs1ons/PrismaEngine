{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "description": "Base Windows configuration (使用 FetchContent 管理依赖)",
      "generator": "Visual Studio 17 2022",
      "environment": {
        "CMAKE_TOOLCHAIN_FILE": "",
        "VCPKG_ROOT": ""
      },
      "cacheVariables": {
        "PRISMA_USE_FETCHCONTENT": "ON",
        "PRISMA_BUILD_EDITOR": "OFF",
        "CMAKE_TOOLCHAIN_FILE": "",
        "PRISMA_ENABLE_RENDER_DX12": "ON",
        "PRISMA_ENABLE_AUDIO_XAUDIO2": "ON",
        "PRISMA_ENABLE_RENDER_VULKAN": "OFF",
        "PRISMA_ENABLE_AUDIO_OPENAL": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "description": "Debug build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-debug",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows x64 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x64-release",
      "architecture": "x64",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x86-debug",
      "displayName": "Windows x86 Debug",
      "inherits": "windows-base",
      "description": "Debug build for Windows x86 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x86-debug",
      "architecture": "Win32",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x86-release",
      "displayName": "Windows x86 Release",
      "inherits": "windows-base",
      "description": "Release build for Windows x86 using Visual Studio 2022",
      "binaryDir": "${sourceDir}/build/windows-x86-release",
      "architecture": "Win32",
      "toolset": "host=x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "windows-x86-debug",
      "configurePreset": "windows-x86-debug"
    },
    {
      "name": "windows-x86-release",
      "configurePreset": "windows-x86-release"
    }
  ]
}